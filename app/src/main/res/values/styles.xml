<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 다크 모드 고대비 테마 -->
    <style name="AppTheme" >
        <item name="colorPrimary">@color/background</item> <!-- 배경색 -->
        <item name="colorPrimaryDark">@color/black</item> <!-- 다크 배경 -->
        <item name="colorAccent">@color/button</item> <!-- 버튼 색상 -->
        <item name="android:textColor">@color/main_text</item> <!-- 주 텍스트 색상 -->
        <item name="android:editTextBackground">@color/editText</item> <!-- EditText 배경 색상 -->
    </style>

    <!-- 라이트 모드 고대비 테마 -->
    <style name="AppTheme_Light">
        <item name="colorPrimary">@color/white</item> <!-- 라이트 모드 배경색 -->
        <item name="colorPrimaryDark">@color/blackText</item> <!-- 라이트 모드 다크 배경 -->
        <item name="colorAccent">@color/button</item> <!-- 버튼 색상 -->
        <item name="android:textColor">@color/blackText</item> <!-- 주 텍스트 색상 -->
        <item name="android:editTextBackground">@color/editText</item> <!-- EditText 배경 색상 -->
    </style>

    <style name="dialog_cancel_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_round_button</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/dialog_btn</item>
    </style>

    <style name="dialog_check_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/style_round_button</item>
        <item name="android:textColor">@color/main_text</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="backgroundTint">@color/dialog_calcel_btn</item>
    </style>


</resources>