<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreatePlantStartActivity">

    <LinearLayout
        android:id="@+id/containerLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
        android:id="@+id/addPlantsTextView"
        android:layout_width="283dp"
        android:layout_height="wrap_content"
        android:gravity="start"
        android:text="식물 등록 페이지 입니다."
        android:textColor="@color/blackText"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
            android:id="@+id/noPlantsTextView"
            android:layout_width="283dp"
            android:layout_height="wrap_content"
            android:gravity="start"
            android:text="갤러리 사진 선택과 사진 찍기 중 식물 등록 방식을 선택해주세요."
            android:textColor="@color/blackText"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginBottom="70dp"
            />

        <Button
            android:id="@+id/bringGalleryBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="사진 선택"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:contentDescription="@string/gallery_button_description"/>
        
        <Button
            android:id="@+id/picAddBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="사진 찍기"
            android:background="@color/black"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="40dp"
            android:contentDescription="@string/shutter_button_description"/>

        <Button
            android:id="@+id/backButton"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:background="@color/black"
            android:contentDescription="@string/back_button"
            android:padding="10dp"
            android:text="뒤로가기"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>


